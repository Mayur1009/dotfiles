shell-integration = "detect"
shell-integration-features = sudo, cursor, title

keybind = clear

keybind = ctrl+shift+a=select_all
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
# Macos
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard

keybind = ctrl+shift+i=inspector:toggle
keybind = ctrl+shift+enter=toggle_fullscreen
keybind = ctrl+shift+comma=reload_config
keybind = ctrl+shift+space=write_screen_file:open

keybind = ctrl+shift+zero=reset_font_size
keybind = ctrl+shift+plus=increase_font_size:1
keybind = ctrl+shift+equal=increase_font_size:1
keybind = ctrl+shift+minus=decrease_font_size:1


